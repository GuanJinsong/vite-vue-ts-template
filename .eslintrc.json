{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "vue",
    "@typescript-eslint"
  ],
  "rules": {
    // 不使用分号
    "semi": [
      "error",
      "never"
    ],
    // 使用单引号
    "quotes": [
      "error",
      "single"
    ],
    // 组件命名
    "vue/multi-word-component-names": "off",
    // any
    "@typescript-eslint/no-explicit-any": "warn",
    // prettier
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
